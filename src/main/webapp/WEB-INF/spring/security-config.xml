<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                 http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                 http://www.springframework.org/schema/security
                 http://www.springframework.org/schema/security/spring-security-3.2.xsd">


    <beans:bean id="ep403" class="org.springframework.security.web.authentication.Http403ForbiddenEntryPoint"/>


    <http   auto-config="true" use-expressions="true"  entry-point-ref="ep403" >   <!--access-denied-page="/denied" -->
        <!--<intercept-url pattern="/index" access=" hasRole('ROLE_ADMIN', ), ROLE_USER, ROLE_ANONYMOUS"/>-->



        <access-denied-handler  error-page="/denied"></access-denied-handler>


        <intercept-url pattern="/" access="permitAll" />
        <intercept-url pattern="/admin" access="hasRole('ROLE_ADMIN')"/>
        <intercept-url pattern="/user" access="hasRole('ROLE_USER')"/>

        <intercept-url pattern="/do" access="!hasRole('IS_AUTHENTICATED_ANONYMOUSLY')"/>


        <form-login login-page="/login" default-target-url="/index" always-use-default-target="true" authentication-failure-url="/login"/>

        <logout logout-url="/logout" logout-success-url="/admin" delete-cookies="true" invalidate-session="true"/>
        <anonymous username="guest" granted-authority="IS_AUTHENTICATED_ANONYMOUSLY"/> <!--ROLE_ANONYMOUS-->

        <!--<anonymous />-->

        <remember-me/>
    </http>

    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="admin" password="1111" authorities="ROLE_ADMIN,ROLE_USER"/>
                <user name="user" password="1111" authorities="ROLE_USER"/>
            </user-service>
        </authentication-provider>
    </authentication-manager>




</beans:beans>
